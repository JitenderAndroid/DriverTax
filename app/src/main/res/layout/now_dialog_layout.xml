<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <LinearLayout
        android:id="@+id/layout_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_footer"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_car_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_15"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/yellow_taxi"
            android:textSize="@dimen/font_16" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_car_descriptin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingBottom="10dp"
                android:paddingLeft="2dp"
                android:paddingTop="5dp"
                android:scrollHorizontally="true"
                android:scrollbars="vertical"
                android:singleLine="true"
                android:textAlignment="center"
                android:textColor="@color/grey"
                android:textSize="@dimen/font_14" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_far_breakup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/horizontal_sep" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/title_bg"
                android:paddingLeft="2dp"
                android:paddingRight="2dp">

                <TextView
                    android:id="@+id/txt_far_breakup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/far_breakup"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_15" />

            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_timming"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:weightSum="3">

            <RelativeLayout
                android:id="@+id/layout_one"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <RelativeLayout
                        android:id="@+id/layout_first_dlr_srt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/layout_rounded"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@drawable/currency_border">

                            <TextView
                                android:id="@+id/txt_first_currency"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_margin="1dp"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="7sp" />

                        </RelativeLayout>

                        <!--<ImageView-->
                        <!--android:id="@+id/img_first_dol_icon"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:src="@drawable/dollar_icon"-->
                        <!--android:layout_centerVertical="true"/>-->

                        <TextView
                            android:id="@+id/txt_first_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/margin_5"
                            android:layout_toRightOf="@+id/layout_rounded"
                            android:text=""
                            android:textColor="@color/yellow_taxi"
                            android:textSize="@dimen/font_16" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/txt_first_km"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layout_first_dlr_srt"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="@dimen/margin_10"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_16" />

                </RelativeLayout>

                <ImageView
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/vertical_sep" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_two"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <RelativeLayout
                        android:id="@+id/layout_sec_dlr_srt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/layout_secound_rounded"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@drawable/currency_border">

                            <TextView
                                android:id="@+id/txt_secound_currency"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_margin="1dp"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="7sp" />

                        </RelativeLayout>
                        <!--<ImageView-->
                        <!--android:id="@+id/img_sec_dol_icon"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:src="@drawable/dollar_icon"/>-->

                        <TextView
                            android:id="@+id/txt_sec_pric"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_5"
                            android:layout_toRightOf="@+id/layout_secound_rounded"
                            android:text=""
                            android:textColor="@color/yellow_taxi"
                            android:textSize="@dimen/font_16" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/txt_sec_km"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layout_sec_dlr_srt"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="@dimen/margin_10"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_16" />

                </RelativeLayout>

                <ImageView
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/vertical_sep" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_three"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <RelativeLayout
                        android:id="@+id/layout_thd_dlr_srt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/layout_thd_rounded"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@drawable/currency_border">

                            <TextView
                                android:id="@+id/txt_thd_currency"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_margin="1dp"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="7sp" />

                        </RelativeLayout>
                        <!--<ImageView-->
                        <!--android:id="@+id/img_thd_dol_icon"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:src="@drawable/dollar_icon"/>-->

                        <TextView
                            android:id="@+id/txt_thd_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_5"
                            android:layout_toRightOf="@+id/layout_thd_rounded"
                            android:text=""
                            android:textColor="@color/yellow_taxi"
                            android:textSize="@dimen/font_16" />
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/txt_Third_km"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layout_thd_dlr_srt"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="@dimen/margin_10"
                        android:text="@string/wait_time_charges"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_10" />

                </RelativeLayout>

                <ImageView
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/vertical_sep" />
            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_40"
            android:background="@drawable/cell_header_background">

            <TextView
                android:id="@+id/txt_specailChr_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/special_locaion_pickup"
                android:textColor="@color/black"
                android:textSize="@dimen/font_14" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_10"
            android:background="@drawable/now_cash_popup_border">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_50"
                android:layout_centerVertical="true"
                android:baselineAligned="false"
                android:weightSum="3">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <!--<ImageView-->
                        <!--android:id="@+id/img_dol_total_prc"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:src="@drawable/dollar_sign"-->
                        <!--android:layout_marginRight="@dimen/margin_5"-->
                        <!--android:layout_centerVertical="true"/>-->
                        <TextView
                            android:id="@+id/txt_currency"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text=""
                            android:textColor="@color/yellow_taxi"
                            android:textSize="@dimen/font_16" />

                        <TextView
                            android:id="@+id/txt_total_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/margin_3"
                            android:layout_toRightOf="@+id/txt_currency"
                            android:text=""
                            android:textSize="@dimen/font_16" />

                    </RelativeLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:layout_marginTop="@dimen/margin_10"
                        android:background="@color/gray_light" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/select_seat_capacity_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true">

                        <ImageView
                            android:id="@+id/img_dol_person"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/margin_5"
                            android:src="@drawable/no_of_persone" />

                        <Spinner
                            android:id="@+id/spinner_person"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/img_dol_person"
                            android:background="@android:color/transparent"
                            android:minWidth="@dimen/height_30"
                            android:spinnerMode="dialog" />

                        <ImageView
                            android:id="@+id/img_down_errow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/margin_5"
                            android:layout_toRightOf="@+id/spinner_person"
                            android:src="@drawable/down_arrow" />

                    </RelativeLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:layout_marginTop="@dimen/margin_10"
                        android:background="@color/gray_light" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_cash"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <ImageView
                            android:id="@+id/img_cash"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/margin_5"
                            android:src="@drawable/money_icon" />

                        <TextView
                            android:id="@+id/txt_cash"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/img_cash"
                            android:text="@string/cash_cao"
                            android:textSize="@dimen/font_16" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/margin_5"
                            android:layout_toRightOf="@+id/txt_cash"
                            android:src="@drawable/down_arrow" />

                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_130"
            android:layout_marginTop="@dimen/margin_10"
            android:background="@color/gray_light"
            android:minHeight="@dimen/height_100"
            android:orientation="horizontal">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycle_cab_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <!--<ImageView-->
        <!--android:id="@+id/img_book"-->
        <!--android:layout_width="200dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:src="@drawable/book_btn"-->
        <!--android:scaleType="fitXY"/>-->

        <RelativeLayout
            android:id="@+id/layout_book"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/book_now_btn">

            <TextView
                android:id="@+id/txt_book"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/book"
                android:textColor="@color/black"
                android:textSize="@dimen/font_14" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_cancle"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/reservation_btn">

            <TextView
                android:id="@+id/txt_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/cancel_popup"
                android:textColor="@color/reservation_color"
                android:textSize="@dimen/font_14" />

        </RelativeLayout>

        <!--<ImageView-->
        <!--android:id="@+id/img_cancel"-->
        <!--android:layout_width="200dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:src="@drawable/cancel_btn"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_alignParentEnd="true" />-->

    </RelativeLayout>

</RelativeLayout>